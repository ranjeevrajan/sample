        <ul id="poll-answers">
            <?php foreach( $poll_answers as $answer ): ?>
                <li>
                    <span class="answer"><?php echo $this->htmlEscape($answer->getAnswerTitle()) ?>:</span>
                    <span class="votes"><?php echo $answer->getVotesCount() ?> (<?php echo $answer->getPercent() ?>%)</span>
                </li>
            <?php endforeach; ?>
