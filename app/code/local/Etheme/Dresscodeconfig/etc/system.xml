<?xml version="1.0"?>
<config>
    <tabs>
		<etheme>
			<label>eTheme</label>
			<sort_order>0</sort_order>
		</etheme>
	</tabs>
	<sections>
		<dresscodeconfig>
			<label>Dresscode Template Settings</label>
			<tab>etheme</tab>
			<sort_order>1</sort_order>
			<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
			 <groups>
                <dresscodeconfig_mainfront>
                 <label>Theme options</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                    <fields>
                        
                        <font>
							<label>Font:</label>
							<frontend_type>select</frontend_type>
                            <source_model>dresscodeconfig/config_customfieldfont</source_model>
							<frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldfont</frontend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</font>

                         <bg_pattern>
							<label>BG Pattern: </label>
							<frontend_type>radios</frontend_type>
							<source_model>dresscodeconfig/config_customfieldpattern</source_model>
                            <frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldpattern</frontend_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</bg_pattern>


                        <color>
							<label>Theme Color: </label>
							<comment>This color will be used for buttons and backgrounds</comment>
							<frontend_type>text</frontend_type>
							<frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldcolor</frontend_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</color>


                        <body_bg_color>
							<label>Content bg Color: </label>
							<comment>Content background</comment>
							<frontend_type>text</frontend_type>
							<frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldcolor</frontend_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</body_bg_color>



                        <font_color>
							<label>Font Color: </label>
							<comment>This color will be used for content font color</comment>
							<frontend_type>text</frontend_type>
							<frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldcolor</frontend_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</font_color>


                        <tagcloud>
							<label>Tag Cloud:</label>
							<frontend_type>radios</frontend_type>
							<source_model>dresscodeconfig/config_customfieldtagcloud</source_model>
                            <frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldtagcloud</frontend_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</tagcloud>

                        <imagehover>
							<label>Image change onMouseOver in product listing: </label>
							<comment>Show image with “Sort Order” = 2 on mouseover in product listing</comment>
							<frontend_type>radios</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <frontend_model>dresscodeconfig/adminhtml_system_config_form_field_customfieldimagehover</frontend_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</imagehover>

                        <deal_of_day>
							<label>Deal of the day product: </label>
							<comment>Product "id"</comment>
							<frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
						</deal_of_day>

                        <ajax_buttons>
                            <label>Ajax add to cart</label>
                            <comment>Allow add to cart without render of the page</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ajax_buttons>



                  </fields>
                </dresscodeconfig_mainfront>

                 <dresscodeconfig_productlabels>
                    <label>Product Labels</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <product_sale_label>
                            <label>Show "Sale" label</label>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                        </product_sale_label>
	                    <product_sale_label_position>
                            <label>"Sale" label position</label>
                            <source_model>dresscodeconfig/config_customfieldposition</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                        </product_sale_label_position>
                        <product_new_label>
                            <label>Show "New" label</label>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                        </product_new_label>
	                    <product_new_label_position>
                            <label>"New" label position</label>
                            <source_model>dresscodeconfig/config_customfieldposition</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                        </product_new_label_position>
                    </fields>
                </dresscodeconfig_productlabels>

                 <dresscodeconfig_socials>
                    <label>Social widgets</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                    <fields>
                        <fbid>
                            <label>Facebook profile name(not link, only name)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default><show_in_website>1</show_in_website><show_in_store>1</show_in_store>
                        </fbid>
                        <twitter>
                            <label>Twitter account</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </twitter>
                    </fields>
                </dresscodeconfig_socials>


              </groups>
		</dresscodeconfig>
	</sections>
</config>