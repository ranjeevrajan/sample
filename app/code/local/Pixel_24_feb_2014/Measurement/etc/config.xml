    <global>
        <models>
            <measurement>
                <class>Pixel_Measurement_Model</class>
                <resourceModel>measurement_mysql4</resourceModel>
            </measurement>
            <measurement_mysql4>
                <class>Pixel_Measurement_Model_Mysql4</class>
                <entities>
                    <measurement>
                        <table>measurement</table>
                    </measurement>
                </entities>
            </measurement_mysql4>
        </models>
        <resources>
            <measurement_setup>
                <setup>
                    <module>Pixel_Measurement</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </measurement_setup>
            <measurement_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </measurement_write>
            <measurement_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </measurement_read>
        </resources>
        <blocks>
            <measurement>
                <class>Pixel_Measurement_Block</class>
            </measurement>
        </blocks>
        <helpers>
            <measurement>
                <class>Pixel_Measurement_Helper</class>
            </measurement>
        </helpers>
		
		<fieldsets>
            <sales_convert_quote>
                <body_measurement>
                    <to_order>*</to_order>
                </body_measurement>
            </sales_convert_quote>
			
			<sales_convert_order>
                <body_measurement>
                    <to_quote>*</to_quote>
                </body_measurement>
			</sales_convert_order>
        </fieldsets>
		
		<events>			
			<!-- Hooks into shipping method save event -->
			<checkout_controller_onepage_save_shipping_method>
				<observers>
					<measurement_shipping_save>
						<type>model</type>
						<class>measurement/observer</class>
						<method>hookToShippingMethodSaveEvent</method>
					</measurement_shipping_save>
				</observers>
			</checkout_controller_onepage_save_shipping_method>
			<!-- Hooks into shipping method save event -->
			
			<!-- Hooks into order save event -->
			<checkout_type_onepage_save_order_after>
				<observers>
					<measurement_order_success>
						<type>singleton</type>
						<class>measurement/observer</class>
						<method>hookToOrderSaveEvent</method>
					</measurement_order_success>
				</observers>
			</checkout_type_onepage_save_order_after>
			<!-- Hooks into order save event -->
			
		</events>
		
		<!-- checkout_controller_onepage_save_shipping_method -->
		
    </global>
</config>