<config>
    <modules>
        <Pixel_Measurement>
            <version>0.2.0</version>
        </Pixel_Measurement>
    </modules>
    <frontend>
        <routers>
            <measurement>
                <use>standard</use>
                <args>
                    <module>Pixel_Measurement</module>
                    <frontName>measurement</frontName>
                </args>
            </measurement>
        </routers>
        <layout>
            <updates>
                <measurement>
                    <file>measurement.xml</file>
                </measurement>
            </updates>
        </layout>
		
		<events>
			<!-- Hooks into order save event -->
			<checkout_type_onepage_save_order_after>
				<observers>
					<measurement_order_success>
						<type>singleton</type>
						<class>measurement/observer</class>
						<method>hookToOrderSaveEvent</method>
					</measurement_order_success>
				</observers>
			</checkout_type_onepage_save_order_after>
			<!-- Hooks into order save event -->
		</events>

    <translate>
        <modules>
            <Pixel_Measurement>
                <files>
                    <default>Pixel_Measurement.csv</default>
                </files>
            </Pixel_Measurement>
        </modules>
    </translate>

		
    </frontend>
    <admin>
        <routers>
			<measurement>
				<use>admin</use>
				<args>
					<module>Pixel_Measurement</module>
					<frontName>measurement</frontName>
				</args>
			</measurement>
        </routers>
    </admin>
